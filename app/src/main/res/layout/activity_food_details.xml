<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FoodDetails">

    <ImageView
            android:layout_width="180dp"
            android:layout_height="165dp" app:srcCompat="@drawable/coffee_pot"
            tools:layout_editor_absoluteY="131dp" tools:layout_editor_absoluteX="123dp" android:id="@+id/tvFoodImage"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="156dp" android:id="@+id/tvName"
            app:layout_constraintTop_toBottomOf="@+id/tvFoodImage" android:layout_marginTop="52dp"
            android:textSize="24sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="370dp"
            android:layout_height="154dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/tvDes"
            app:layout_constraintTop_toBottomOf="@+id/tvName" android:layout_marginTop="48dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>